page {
  background-color: #F7F6FB;
  width: 100%;
  box-sizing: border-box;
}
.jiaoyisuo_btn1 {
  width: 90%;
  margin: 0 auto;
  padding: 8px 0;
  box-sizing: border-box;
  background: #19BE6B;
  box-shadow: 0px 8rpx 22rpx 1px rgba(8, 75, 215, 0.32);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.register_box {
  width: 100%;
  background-color: #FFFFFF;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.register_box .input_box {
  margin-top: 30rpx;
  width: 100%;
}
.register_box .input_box .item {
  height: 120rpx;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f4f4f4;
  font-size: 30rpx;
  font-family: PingFang SC;
}
.register_box .input_box .item:last-child {
  border-bottom: none;
}
.register_box .input_box .item .wz {
  font-weight: bold;
  width: 180rpx;
  color: #37416B;
}
.register_box .input_box .item .input_con {
  width: calc(100% - 180rpx);
  display: flex;
  align-items: center;
}
.register_box .input_box .item .input_con .input {
  width: calc(100% - 70rpx);
  text-align: right;
}
.register_box .input_box .item .input_con .yan {
  width: 70rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 34rpx;
}
.register_box .input_box .item .input_con .yan image {
  width: 44rpx;
  height: 34rpx;
}
.Tips_box {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
}
.Tips_box .left {
  width: 40rpx;
}
.Tips_box .left image {
  width: 40rpx;
}
.Tips_box .right {
  display: flex;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #A5ABC3;
  flex-direction: column;
}
.Tips_box .right text {
  margin-bottom: 20rpx;
}
.btn_box {
  margin-top: 80rpx;
}

